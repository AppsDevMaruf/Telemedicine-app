<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cancel_buttonSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@drawable/handler" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Select Filter Type"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

    <LinearLayout
        android:id="@+id/productTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/stroke_boarder"
        android:orientation="horizontal"
        android:tag="productTitle">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:fontFamily="@font/barlow_semibold"
            android:includeFontPadding="false"
            android:text="Product Name"
            android:drawableStart="@drawable/pointer"
            android:drawablePadding="4dp"
            android:paddingStart="8dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="@color/black"
            tools:ignore="RtlSymmetry" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/productSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/stroke_boarder"
        android:orientation="horizontal"
        android:tag="productSubtitle">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:fontFamily="@font/barlow_semibold"
            android:includeFontPadding="false"
            android:text="Product Generic"
            android:drawableStart="@drawable/pointer"
            android:drawablePadding="4dp"
            android:paddingStart="8dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="@color/black"
            tools:ignore="RtlSymmetry" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/createdDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/stroke_boarder"
        android:orientation="horizontal"
        android:tag="createdDate">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:fontFamily="@font/barlow_semibold"
            android:includeFontPadding="false"
            android:text="Date"
            android:drawableStart="@drawable/pointer"
            android:drawablePadding="4dp"
            android:paddingStart="8dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="@color/black"
            tools:ignore="RtlSymmetry" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/stroke_boarder"
        android:orientation="horizontal"
        android:tag="stock">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:fontFamily="@font/barlow_semibold"
            android:includeFontPadding="false"
            android:text="Stock"
            android:drawableStart="@drawable/pointer"
            android:drawablePadding="4dp"
            android:paddingStart="8dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="@color/black"
            tools:ignore="RtlSymmetry" />


    </LinearLayout>


</LinearLayout>